//- Navbar mixins
mixin nav(id, style)
  - var style = (typeof style === 'undefined') ? "default" : style
  nav( role="navigation", class=["navbar", "navbar-" + style] )
    .navbar-header
      button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="true", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar

    .collapse.navbar-collapse( id=id )
      ul.nav.navbar-nav
        block
 
mixin nav_item(href, active)
  li(class=active): a( href=href )
    block

mixin nav_item_tab(href, active)
  li(class=active): a( href=href data-toggle="tab")
    block
 
mixin nav_item_dropdown(href, active)
  li(class=[active])
    a(href=href)= attributes.label
    ul
      block
mixin nav_item_sub(href, active)
  li(class=[active])
    a(href=href)= attributes.label
    block
 
mixin nav_divider
  li.divider
 
mixin nav_header
  li.dropdown-header
    block
 
//- End navbar mixins

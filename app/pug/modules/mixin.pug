mixin film(href, src, name, genre, id, parentname, name1)
  - var name1 = (typeof name1 === 'undefined') ? "фильм" : name1
  .film.panel
    a( href=href )
      img(src=src alt="")
    div
      a(href="/")= name1
      header 
        .name= name
        .genre= genre
        .panel-collapse.collapse(id="film-"+id )
          .text: p 
            block
      footer
        .clearfix
          a(href="/").comment 12
          a.btn.more( data-parent="#"+parentname data-toggle="collapse" href="#film-"+id ) Подробнее
          a.btn.link(href="#" ) Подробнее
//-end film

